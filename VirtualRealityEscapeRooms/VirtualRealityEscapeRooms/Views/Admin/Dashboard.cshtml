@{
    ViewData["Title"] = "Administratorska Ploča";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 30px;
        background: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    h2 {
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #f5f5f5;
    }

    .dashboard-list {
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .dashboard-list li {
            background: #232323;
            margin: 10px 0;
            padding: 15px;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            text-align: center;
            font-size: 18px;
        }

            .dashboard-list li a {
                text-decoration: none;
                color: #c0c0c0;
                font-weight: 500;
                display: block;
                transition: color 0.3s ease-in-out;
            }

            .dashboard-list li:hover {
                background: #333;
                transform: scale(1.03);
            }

            .dashboard-list li a:hover {
                color: #4a90e2;
            }
</style>

<div class="dashboard-container">
    <h2>Administratorska Ploča</h2>
    <ul class="dashboard-list">
        <li><a asp-controller="Igras" asp-action="Create">➕ Dodaj novu igru</a></li>
        <li><a asp-controller="Rezervacijas" asp-action="Index">📅 Pregledaj rezervacije</a></li>
        <li><a asp-controller="Statistika" asp-action="Index">📊 Pregledaj statistiku</a></li>
        <li><a asp-controller="PrijavaKorisnikas" asp-action="Index">⚠️ Pregledaj korisničke prijave</a></li>
    </ul>
</div>
