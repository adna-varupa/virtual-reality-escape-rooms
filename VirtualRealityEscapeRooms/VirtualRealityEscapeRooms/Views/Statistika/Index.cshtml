@model VirtualRealityEscapeRooms.ViewModels.StatistikaViewModel

@{
    ViewData["Title"] = "Statistika";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .statistika-container {
        max-width: 700px;
        margin: 60px auto;
        padding: 40px;
        background: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    h1 {
        font-size: 26px;
        font-weight: bold;
        text-align: center;
        color: #f5f5f5;
        margin-bottom: 30px;
    }

    .table-container {
        overflow-x: auto;
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: #232323;
        color: #e0e0e0;
        border-radius: 8px;
    }

        .table thead {
            background: #333;
            color: #fff;
        }

        .table th, .table td {
            padding: 14px;
            text-align: center;
            border-bottom: 1px solid #444;
            font-size: 15px;
        }

        .table tbody tr:hover {
            background: #2e2e2e;
            transition: 0.3s ease-in-out;
        }

    .btn-container {
        margin-top: 40px;
        text-align: center;
    }

    .btn-secondary {
        background-color: #4a90e2;
        color: #fff;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        transition: all 0.3s ease-in-out;
        font-size: 15px;
    }

        .btn-secondary:hover {
            background-color: #357ab8;
            transform: scale(1.05);
        }

</style>

<div class="statistika-container">
    <h1>Statistika</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Statistika</th>
                    <th>Vrijednost</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ukupno korisnika</td>
                    <td>@Model.TotalUsers</td>
                </tr>
                <tr>
                    <td>Ukupno igara</td>
                    <td>@Model.TotalGames</td>
                </tr>
                <tr>
                    <td>Ukupno rezervacija</td>
                    <td>@Model.TotalReservations</td>
                </tr>
                <tr>
                    <td>Ukupno prijava</td>
                    <td>@Model.TotalReports</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
