@model VirtualRealityEscapeRooms.ViewModels.LoginViewModel

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background: #1e1e1e;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    h2 {
        color: #f5f5f5;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            color: #ccc;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #444;
            border-radius: 6px;
            background: #2c2c2c;
            color: #e0e0e0;
        }

    .remember-me {
        display: flex;
        align-items: center;
        font-size: 14px;
        color: #bbb;
        margin-bottom: 15px;
    }

        .remember-me input {
            margin-right: 8px;
        }

    .btn-login {
        background: #777;
        color: #fff;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .btn-login:hover {
            background: #999;
            transform: scale(1.05);
        }

    .register-link {
        display: block;
        margin-top: 15px;
        font-size: 14px;
        color: #bbb;
    }

        .register-link a {
            color: #ff8c00;
            text-decoration: none;
            transition: color 0.3s;
        }

            .register-link a:hover {
                color: #ff4500;
            }
</style>

<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>

        <form method="post">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" required />
            </div>
            <div class="remember-me">
                <input asp-for="RememberMe" />
                <label>Zapamti me</label>
            </div>
            <button type="submit" class="btn-login">Login</button>
        </form>

        <div class="register-link">
            <span>Nemaš profil? <a asp-action="Register">Registruj se ovdje!</a></span>
        </div>
    </div>
</div>
