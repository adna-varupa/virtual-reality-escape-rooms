@model VirtualRealityEscapeRooms.ViewModels.RegisterViewModel

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-card {
        background: #1e1e1e;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    h2 {
        color: #f5f5f5;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            color: #ccc;
            margin-bottom: 5px;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #444;
            border-radius: 6px;
            background: #2c2c2c;
            color: #e0e0e0;
        }

    .btn-register {
        background: #777;
        color: #fff;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .btn-register:hover {
            background: #999;
            transform: scale(1.05);
        }

    .login-link {
        display: block;
        margin-top: 15px;
        font-size: 14px;
        color: #bbb;
    }

        .login-link a {
            color: #ff8c00;
            text-decoration: none;
            transition: color 0.3s;
        }

            .login-link a:hover {
                color: #ff4500;
            }
</style>

<div class="register-container">
    <div class="register-card">
        <h2>Register</h2>

        <form method="post">
            <div class="form-group">
                <label>Ime</label>
                <input asp-for="Ime" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" required />
            </div>
            <div class="form-group">
                <label>Potvrdi Password</label>
                <input asp-for="ConfirmPassword" type="password" required />
            </div>
            <div class="form-group">
                <label>Role</label>
                <select asp-for="Role" required>
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn-register">Register</button>
        </form>

        <div class="login-link">
            <span>Već imaš profil? <a asp-action="Login">Loguj se ovdje</a></span>
        </div>
    </div>
</div>
