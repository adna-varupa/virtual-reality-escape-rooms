@model VR_escape_rooms.modeli.Rezervacija

@{
    ViewData["Title"] = "Brisanje Rezervacije";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    h1 {
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #f5f5f5;
    }

    h3 {
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 20px;
        color: #ff6b6b;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: #232323;
        border-radius: 10px;
        overflow: hidden;
    }

        .details-table th, .details-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #444;
            text-align: left;
        }

        .details-table th {
            background: #333;
            color: #e0e0e0;
            font-weight: 600;
        }

        .details-table td {
            color: #ccc;
        }

        .details-table tr:last-child td {
            border-bottom: none;
        }

    .email-highlight {
        color: #ffffff !important;
        font-weight: bold;
    }

    .buttons-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #ff4444;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        color: white;
        display: inline-block;
    }

        .btn-danger:hover {
            background: #cc0000;
            transform: scale(1.05);
        }

    .btn-secondary {
        background: #777;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        transition: all 0.3s ease-in-out;
        color: white;
        text-decoration: none;
        display: inline-block;
    }

        .btn-secondary:hover {
            background: #555;
            transform: scale(1.05);
        }
</style>

<div class="delete-container">
    <h1>Brisanje Rezervacije</h1>
    <h3>Jeste li sigurni da želite obrisati ovu rezervaciju?</h3>

    <table class="details-table">
        <tbody>
            <tr>
                <th>Korisnik</th>
                <td class="email-highlight">@Html.DisplayFor(model => model.Korisnik.Email)</td> <!-- Email is 100% WHITE -->
            </tr>
            <tr>
                <th>Igra</th>
                <td>@Html.DisplayFor(model => model.Igra.ID)</td>
            </tr>
            <tr>
                <th>Datum Rezervacije</th>
                <td>@Html.DisplayFor(model => model.DatumRezervacije)</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Html.DisplayFor(model => model.Status)</td>
            </tr>
        </tbody>
    </table>

    <div class="buttons-container">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Obriši" class="btn-danger" />
        </form>
        <a asp-action="Index" class="btn-secondary">Nazad na listu</a>
    </div>
</div>
