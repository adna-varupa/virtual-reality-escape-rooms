@model VR_escape_rooms.modeli.Igra
@using VR_escape_rooms.modeli

@{
    ViewData["Title"] = "Uredi igru";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .edit-container {
        max-width: 600px;
        margin: 50px auto 100px;
        background: #1a1a1a;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.05);
        text-align: center;
    }

    h1 {
        font-size: 26px;
        font-weight: bold;
        color: #f5f5f5;
        border-bottom: 2px solid #444;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 18px;
        color: #d3d3d3;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            font-weight: bold;
            color: #4a90e2;
            margin-bottom: 5px;
        }

    .form-control {
        background: #232323;
        border: 1px solid #444;
        color: #e0e0e0;
        border-radius: 6px;
        padding: 8px;
    }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 8px rgba(74, 144, 226, 0.5);
        }

    .img-thumbnail {
        max-width: 200px;
        border: 2px solid #444;
        border-radius: 8px;
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #4a90e2;
        border: none;
        color: white;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        transition: all 0.3s ease-in-out;
        padding: 10px 15px;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #357ab8;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #444;
        border: none;
        color: white;
        padding: 10px 15px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        transition: all 0.3s ease-in-out;
        margin-top: 10px;
    }

        .btn-secondary:hover {
            background-color: #666;
            transform: scale(1.05);
        }
</style>

<div class="edit-container">
    <h1>Uredi igru</h1>

    <h4>Igra</h4>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="SlikaPath" />

        <div class="form-group">
            <label asp-for="Naziv"></label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tezina"></label>
            @Html.DropDownListFor(
                     model => model.Tezina,
                     new SelectList(Enum.GetValues(typeof(Tezina)).Cast<Tezina>().Select(t => new { Value = t, Text = t.ToString() }),
                     "Value", "Text"),
                     "Odaberite težinu",
                     new { @class = "form-control" })
            <span asp-validation-for="Tezina" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Trajanje"></label>
            <input asp-for="Trajanje" class="form-control" />
            <span asp-validation-for="Trajanje" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Opis"></label>
            <input asp-for="Opis" class="form-control" />
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Zanr"></label>
            @Html.DropDownListFor(
                     model => model.Zanr,
                     new SelectList(Enum.GetValues(typeof(Zanr)).Cast<Zanr>().Select(z => new { Value = z, Text = z.ToString() }),
                     "Value", "Text"),
                     "Odaberite žanr",
                     new { @class = "form-control" })
            <span asp-validation-for="Zanr" class="text-danger"></span>
        </div>

        <!-- Slika igre -->
        <div class="form-group text-center">
            <label>Trenutna slika</label><br />
            @if (!string.IsNullOrEmpty(Model.SlikaPath))
            {
                <img src="@Model.SlikaPath" class="img-thumbnail" />
            }
            else
            {
                <p style="color: #999;">Nema slike</p>
            }
        </div>

        <!-- Upload nova slika -->
        <div class="form-group">
            <label>Nova slika</label>
            <input type="file" name="SlikaFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Sačuvaj</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
