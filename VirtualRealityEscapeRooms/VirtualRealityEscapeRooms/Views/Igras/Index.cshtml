@model IEnumerable<VR_escape_rooms.modeli.Igra>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #181818;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 1200px;
    }

    h1 {
        padding-top: 20px;
        font-weight: bold;
        color: #d3d3d3;
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

    .game-card {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        transition: transform 0.3s ease-in-out;
    }

        .game-card:hover {
            transform: scale(1.05);
        }

    .custom-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 12px;
        display: block;
    }

    .game-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.75);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 15px;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .game-card:hover .game-overlay {
        opacity: 1;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .game-info {
        font-size: 14px;
        color: #d3d3d3;
        margin-bottom: 10px;
    }

    .game-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn {
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 12px;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #444;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #666;
        }

    .btn-warning {
        background-color: #777;
        border: none;
        color: #fff;
    }

        .btn-warning:hover {
            background-color: #999;
        }

    .btn-danger {
        background-color: #a33;
        border: none;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c44;
        }

    .alert-success {
        background-color: #2d6a4f; 
        padding: 12px 18px;
        margin: 20px auto; 
        border-radius: 8px;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        border: 1px solid #3e8e6f;
        width: fit-content;
        max-width: 600px;
        opacity: 1;
        transition: opacity 0.5s ease-out;
    }
</style>

<div class="container pt-5">
    @if (TempData["Success"] != null)
    {
        <div id="successMessage" class="alert-success">
            @TempData["Success"]
        </div>
    }

    <h1>Escape Room Igre</h1>

    <div class="text-center mb-4">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary px-4">Dodaj novu igru</a>
        }
    </div>

    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                    <div class="game-card shadow-sm">
                        <img src="@item.SlikaPath" class="custom-img" alt="Slika igre">

                        <div class="game-overlay">
                            <h5 class="card-title">@item.Naziv</h5>
                            <div class="game-info">
                                <p><strong>Težina:</strong> @item.Tezina</p>
                                <p><strong>Trajanje:</strong> @item.Trajanje min</p>
                                <p><strong>Žanr:</strong> @item.Zanr</p>
                            </div>
                            <div class="game-buttons">
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary btn-sm">Detalji</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Uredi</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Obriši</a>
                                }
                                else
                                {
                                    <form method="post" asp-controller="Rezervacijas" asp-action="Reserve" asp-route-id="@item.ID">
                                        <button type="submit" class="btn btn-success btn-sm">Rezerviši</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        let successMessage = document.getElementById("successMessage");
        if (successMessage) {
            successMessage.style.transition = "opacity 0.3s ease-out"; 
            successMessage.style.opacity = "0";
            setTimeout(() => successMessage.remove(), 300); 
        }
    }, 3000);
</script>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
